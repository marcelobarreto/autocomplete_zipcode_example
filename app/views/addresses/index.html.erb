<p id="notice"><%= notice %></p>

<h1>Addresses</h1>
<%= link_to 'New Address', new_address_path %>

<br><br>

<table class="table">
  <thead>
    <tr>
      <th>Zipcode</th>
      <th>Neighborhood</th>
      <th>City</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.zipcode %></td>
        <td><%= address.neighborhood %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= link_to 'Show', address %></td>
      </tr>
    <% end %>
  </tbody>
</table>
